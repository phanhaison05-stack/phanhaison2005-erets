using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace CT5_2_Data
{
    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();
            this.Load += Form1_Load;
        }
        private void Form1_Load(object sender, EventArgs e)
        {
            comboBox1.SelectedItem = "QTKD";
            // set mac dinh la nu
            radioButton2.Checked = true;
            // set mac dinh tong sinh vien nam nu la 0
            textBox4.Text = "0";
            textBox5.Text = "0";
        }
        private void groupBox1_Enter(object sender, EventArgs e)
        {

        }

        private void label1_Click(object sender, EventArgs e)
        {

        }

        private void button1_Click(object sender, EventArgs e)
        {
            if (string.IsNullOrWhiteSpace(textBox1.Text) || // MSSV
                           string.IsNullOrWhiteSpace(textBox2.Text) || // Tên
                           string.IsNullOrWhiteSpace(textBox3.Text))   // Điểm TB
            {
                MessageBox.Show("Vui lòng nhập đầy đủ thông tin!", "Thông báo", MessageBoxButtons.OK, MessageBoxIcon.Warning);
                return;
            }
            string mssv = textBox1.Text.Trim();
            bool found = false;
            int rowIndex = -1;

            // Check if MSSV exists in DataGridView
            foreach (DataGridViewRow row in gvStudent.Rows)
            {
                if (row.IsNewRow) continue;
                if (row.Cells["MSSV"].Value?.ToString() == mssv)
                {
                    found = true;
                    rowIndex = row.Index;
                    break;
                }
            }

            if (!found)
            {
                // Add new student
                int idx = gvStudent.Rows.Add();
                var row = gvStudent.Rows[idx];
                row.Cells["MSSV"].Value = textBox2.Text.Trim();
                row.Cells["Ten"].Value = textBox1.Text.Trim();
                row.Cells["Khoa"].Value = comboBox1.SelectedItem?.ToString();
                row.Cells["GioiTinh"].Value = radioButton1.Checked ? "Nam" : "Nữ";
                row.Cells["DiemTB"].Value = textBox3.Text.Trim();

                MessageBox.Show("Thêm mới dữ liệu thành công!", "Thông báo", MessageBoxButtons.OK, MessageBoxIcon.Information);
            }
            else
            {
                // Update student
                var row = gvStudent.Rows[rowIndex];
                row.Cells["Ten"].Value = textBox2.Text.Trim();
                row.Cells["Khoa"].Value = comboBox1.SelectedItem?.ToString();
                row.Cells["GioiTinh"].Value = radioButton1.Checked ? "Nam" : "Nữ";
                row.Cells["DiemTB"].Value = textBox3.Text.Trim();

                MessageBox.Show("Cập nhật dữ liệu thành công!", "Thông báo", MessageBoxButtons.OK, MessageBoxIcon.Information);
            }
            // Update total male/female students
            int tongNam = 0, tongNu = 0;
            foreach (DataGridViewRow row in gvStudent.Rows)
            {
                if (row.IsNewRow) continue;
                var gt = row.Cells["GioiTinh"].Value?.ToString();
                if (gt == "Nam") tongNam++;
                else if (gt == "Nữ") tongNu++;
            }
            textBox4.Text = tongNam.ToString();
            textBox5.Text = tongNu.ToString();
        }

        private void comboBox1_SelectedIndexChanged(object sender, EventArgs e)
        {
            
        }
        private void UpdateGenderCounts()
        {
            int tongNam = 0, tongNu = 0;

            foreach (DataGridViewRow row in gvStudent.Rows)
            {
                if (row.IsNewRow) continue;

                var gt = row.Cells["GioiTinh"].Value?.ToString();
                if (gt == "Nam") tongNam++;
                else if (gt == "Nữ") tongNu++;
            }

            // tong nam nu
            textBox4.Text = tongNam.ToString();
            textBox5.Text = tongNu.ToString();
        }

        private void button2_Click(object sender, EventArgs e)
        {
            string mssv = textBox2.Text.Trim();
            int rowIndex = -1;

            // Tìm MSSV trong DataGridView
            foreach (DataGridViewRow row in gvStudent.Rows)
            {
                if (row.IsNewRow) continue;
                if (row.Cells["MSSV"].Value?.ToString() == mssv)
                {
                    rowIndex = row.Index;
                    break;
                }
            }

            if (rowIndex == -1)
            {
                MessageBox.Show("Không tìm thấy MSSV cần xóa!", "Thông báo", MessageBoxButtons.OK, MessageBoxIcon.Error);
                return;
            }

            var result = MessageBox.Show("Bạn có chắc chắn muốn xóa sinh viên này?",
                                         "Xác nhận xóa",
                                         MessageBoxButtons.YesNo,
                                         MessageBoxIcon.Question);
            if (result == DialogResult.Yes)
            {
                gvStudent.Rows.RemoveAt(rowIndex);
            }
            MessageBox.Show("Xóa sinh viên thành công!",
                                "Thông báo",
                                MessageBoxButtons.OK,
                                MessageBoxIcon.Information);
            UpdateGenderCounts();
        }
    }
}

    


